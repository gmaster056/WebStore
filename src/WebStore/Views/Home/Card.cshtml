@model WebStore.Models.Employee

<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <title>WebStore</title>



    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body class="d-flex h-100 text-center text-white bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">WebStore</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link" href="/cards">Home</a>
                    <a class="nav-link active" aria-current="page" href="#">About</a>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <h1 class="mb-5">Сотрудник</h1>
            <div class="container">
                <div class="card mb-3 bg-secondary">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://picsum.photos/200/300" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="d-block"></p>
                                    <h5 class="card-title">@Model.Job</h5>
                                <p class="card-text"><b>ФИО:</b><br>@Model.FirstName @Model.MiddleName @Model.LastName</p>
                                <p class="card-text"><b>Возраст:</b><br><span>@Model.Age</span></p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <span class="card-text" style="float:right;"><b>ID: </b>@Model.Id</span>
                            <small class="">Last updated 3 mins ago</small>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="mt-auto text-white-50">
        </footer>
    </div>



</body>
</html>