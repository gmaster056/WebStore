@model IEnumerable<WebStore.Models.Employee>

<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <title>WebStore</title>



    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body class="d-flex h-100 text-center text-white bg-dark">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">WebStore</h3>
                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="#">About</a>
                </nav>
            </div>
        </header>

        <main class="px-3">
            <h1 class="mb-5">Сотрудники</h1>
            @foreach (var employee in Model)
            {
                <a href="/card/@employee.Id">
                    <div class="card text-white bg-secondary mb-3" style="width: 18rem;display:inline-block;">
                        <div class="card-header">@employee.Job</div>
                        <div class="card-body">
                            <h5 class="card-title">@employee.FirstName @employee.LastName</h5>
                            <p class="card-text"></p>
                        </div>
                    </div>
                </a>
            }
        </main>

        <footer class="mt-auto text-white-50">
        </footer>
    </div>



</body>
</html>