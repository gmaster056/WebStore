<script src="~/js/app.js" asp-append-version="true"></script>
<script>
    let path = location.pathname;
    path = path.replace("/", "");
    if (path != "") {
        $('.menu').each(function () {
            $(this).removeClass("active");
        });
        if ($("li").is('#' + path)) {
            $('#' + path).addClass("active");
        }
    }
</script>
